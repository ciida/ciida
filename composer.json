{
    "name": "ciida/ciida",
    "description": "Your virtual assistant for running Artisan Commands",
    "keywords": [
        "ciida",
        "ciida"
    ],
    "homepage": "https://github.com/ciida/ciida",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andr√© Luiz Lunelli",
            "email": "to.lunelli@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.4",
        "orchestra/testbench": "^7.21",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ciida\\Ciida\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ciida\\Ciida\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/testbench package:test",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ciida\\Ciida\\CiidaServiceProvider"
            ],
            "aliases": {
                "Ciida": "Ciida\\Ciida\\CiidaFacade"
            }
        }
    }
}
